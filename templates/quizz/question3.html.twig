{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
<div class="size">
    <h2 class="bgQ2 question2">
        {{ question.content }}
    </h2>
    <form action="{{ path('app_quizz_texture') }}" method="POST"  class="bg-black">
        <input type="hidden" name="answer1" value={{answer1}} />
        <input type="hidden" name="answer2" value={{answer2}} />
        
        <div class="sizeSelection">
            {% for answer in answers %}
                {% if answer.id == 5 %}
                    <button type="submit" name="answer3" value="{{ answer.content }}" class="btnSelect3" style="margin-top: 3px; margin-bottom: 0px">
                        <div class="sizeSelect">
                            <img id="shortBunny" class="sizeSelectImg img-fluid" src="{{ asset('./assets/images/media/courtBaloonBunny.png')}}" alt="lapin pendu par le pied à un ballon avec une ficelle courte" />
                            <div class="sizeSelectText">
                                <div class="answer3Text mb-3">{{ answer.content }}</div>      
                            </div>
                        </div>
                    </button>
                {% endif %}
                {% if answer.id == 6 %}
                    <button type="submit" name="answer3" value="{{ answer.content }}" class="btnSelect3" style="margin-top: 3px; margin-bottom: 0px">
                        <div class="sizeSelect">
                            <img id="longBunny" class="sizeSelectImg img-fluid" src="{{ asset('./assets/images/media/longBaloonBunny.png')}}" alt="lapin accroché au ventre à un ballon avec une ficelle longue"/> 
                            <div class="sizeSelectText">
                                <div class="answer3Text mb-3">{{ answer.content }}</div>
                            </div>
                        </div>
                    </button>
                {% endif %}
            {% endfor %}
        </div>
        
    </form>
</div>
{% endblock %}