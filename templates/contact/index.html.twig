{% extends 'base.html.twig' %}

{% block title %}Contactez nous{% endblock %}

{% block body %}

    <div class="contact bgContact">
    
    {{ form_start(form) }}
    
          <h3>Contactez-nous</h3>
            <div>
                <div>
                    <p class="pe-4">Adresse</p>
                    <p>Route de Paris, La Pacaudi√®re</p>
                </div>

                <div>
                    <p>Un coup de main ?</p>
                    <p>E-mail: contact@ecla.com<br>Phone: 061 294 8197</p>
                </div>

            </div>

            <div class="form">
                <div class="info-contact">
                    <div class="name">
                        {{ form_label(form.name, 'Votre Nom') }}
                        {{ form_widget(form.name) }}
