                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <div class="textarea">
                    {{ form_label(form.message, 'Votre Message') }} 
                    {{ form_widget(form.message) }}
                </div>
                <div class="submit">
                    <button class="button2 button--tamaya button--round-s button--text-thick button--border-thin" data-text="Envoyer">{{ button_label|default('Envoyer') }}</button>
                </div>
            </div>

        {{ form_end(form) }}
